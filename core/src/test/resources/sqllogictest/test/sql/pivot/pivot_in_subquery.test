#PIVOT Cities ON Year IN (SELECT YEAR FROM (SELECT Year, SUM(POPULATION) AS popsum FROM Cities GROUP BY Year ORDER BY popsum DESC)) USING SUM(Population);
query IIIII rowsort
Cities
PIVOT (
  SUM(Population)
  FOR Year IN (
    SELECT Year FROM (
      Select Year, SUM(Population) as popsum FROM Cities GROUP BY Year ORDER BY popsum DESC
      )
    )
  GROUP BY Country, Name
) ORDER BY Country, Name;
