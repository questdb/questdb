<assembly>
    <id>${archive.name}</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>../LICENSE.txt</source>
            <outputDirectory>${runtime.name}/legal</outputDirectory>
        </file>
        <file>
            <source>src/main/bin/${platform.dir.name}/${jemalloc.so}</source>
            <outputDirectory>${runtime.name}/bin</outputDirectory>
        </file>
    </files>
    <fileSets>
        <!-- questdb native libs -->
        <fileSet>
            <directory>src/main/resources/io/questdb/bin/${platform.dir.name}</directory>
            <includes>
                <include>*.*</include>
            </includes>
            <outputDirectory>${runtime.name}/lib</outputDirectory>
        </fileSet>

        <!-- async profiler agent -->
        <fileSet>
            <directory>src/main/bin/${platform.dir.name}/</directory>
            <includes>
                <include>libasyncProfiler.so</include>
            </includes>
            <outputDirectory>${runtime.name}/lib</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>src/main/bin</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <outputDirectory>${runtime.name}/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/runtime</directory>
            <outputDirectory>${runtime.name}</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
